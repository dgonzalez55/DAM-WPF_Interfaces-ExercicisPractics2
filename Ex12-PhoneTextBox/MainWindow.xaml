<Window x:Class="Ex12_PhoneTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex12_PhoneTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Número de telèfon:" FontWeight="Bold"/>
        <local:PhoneTextBox x:Name="PhoneTextBoxControl" Mask="###-###-###" Margin="0,10"/>
        <Button Content="Mostra Telèfon" Click="OnShowPhoneClick" Margin="0,10"/>
        <TextBlock x:Name="PhoneOutput" FontWeight="Bold" />
    </StackPanel>
</Window>
